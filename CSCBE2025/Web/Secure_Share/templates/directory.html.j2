{% extends "base.html.j2" %}
{% block title %}Employee Directory{% endblock %}
{% block header %}Employee Directory{% endblock %}
{% block content %}
<section class="card">
    <div class="info-text">
        Browse through TechCorp's employee directory.
    </div>
    <div class="employee-list">
        {% for employee in employees %}
        <article class="employee-item">
            <div class="employee-info">
                <strong>{{ employee.username }}</strong>
                <span class="employee-email">{{ employee.email }}</span>
                <span class="employee-role">{{ employee.role }}</span>
                <span class="verified-badge">✓ Verified</span>
                <a href="{{ url_for('directory_info', id=employee.id) }}" class="view-profile">View Info</a>
            </div>
        </article>
        {% endfor %}
    </div>
</section>
<a href="{{ url_for('home') }}" class="back-link">← Back to Home</a>
{% endblock %}
{% block extra_css %}
<style>
    .verified-badge {
        background-color: #34c759;
        color: white;
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 0.8em;
    }
    .employee-list {
        margin-top: 20px;
    }
    .employee-item {
        border-bottom: 1px solid #eee;
        padding: 10px 0;
    }
    .employee-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 20px;
    }
    .employee-email {
        color: #666;
        flex-grow: 1;
    }
    .employee-role {
        color: #1a73e8;
        font-size: 0.9em;
        text-transform: capitalize;
    }
    .view-profile {
        background: #1a73e8;
        color: white;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 0.9em;
    }
    .view-profile:hover {
        background: #1557b0;
        text-decoration: none;
    }
</style>
{% endblock %}
